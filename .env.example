# .env.example — 必要な環境変数のサンプル

# Postgres 接続情報 (ローカル or Render)
# e.g. postgresql://todo_user:todo_pass@localhost:5433/todo_dev
DATABASE_URL=

# MongoDB 接続情報 (ローカル or Atlas)
# e.g. mongodb://localhost:27017/todo-chat-app
MONGODB_URI=

# JWT の署名用シークレット
# なるべく長くランダムな文字列を設定
JWT_SECRET=

# JWT の有効期限 (例: 1h, 24h)
JWT_EXPIRES_IN=

# フロントエンドのオリジン (本番用)
# CORS でこのオリジンだけ許可する
# e.g. https://todo-chat-app-frontend.onrender.com
FRONTEND_ORIGIN=
